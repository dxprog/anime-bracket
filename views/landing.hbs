<div class="hero">
	<div class="hero__content">
		<div class="hero__bracket-list">
			<h2>Popular Brackets</h2>
			<ul>
				{{#each topBrackets}}
					<li>
						<img src="{{winner.image}}" alt="{{winner.name}}" />
						<a href="/{{perma}}/vote">{{name}}</a>
					</li>
				{{/each}}
			</ul>
		</div>
		<div class="hero__bracket-list">
			<h2>Past Brackets</h2>
			<ul>
				{{#each pastBrackets}}
					<li>
						<img src="{{winner.image}}" alt="{{winner.name}}" />
						<a href="/{{perma}}/results">{{name}}</a>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>
