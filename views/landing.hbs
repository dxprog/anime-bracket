<div class="hero hero--fixed">
	<div class="hero__entrant-bg">
		{{#each featuredCharacters}}
			<img src="{{image}}" alt="{{name}}" />
		{{/each}}
	</div>
	<div class="hero__content">
		<div class="hero__top-four">
			{{#each topFour}}
				<img src="{{image}}" alt="{{name}}" />
			{{/each}}
		</div>
		<div class="hero__text hero__text--inverse">
			<h2>Featured Bracket</h2>
			<h3>{{featuredBracket.name}}</h3>
			<p>{{featuredBracket.blurb}}</p>
			<ul class="hero__links">
				<li>
					<a href="/{{featuredBracket.perma}}/vote" class="small-button">Check It Out</a>
				</li>
				<li>
					<a href="/brackets/" class="inverse-small-button">See Other Brackets</a>
				</li>
			</ul>
		</div>
	</div>
</div>

